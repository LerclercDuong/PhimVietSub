<div class="movies-grid movies layouts container">

    <% for (let i = 0; i < similar.length; i++) { %>
        <a href="/watch/<%= similar[i].slug %>/?ep=1">
          <div class="movie-card">
      
              <div class="card-head">
                 
                    <img src="<%= similar[i].thumb_url %>" alt="" class="card-img"  >
                    
      
                <div class="card-overlay">
      
                  <div class="bookmark">
                    <ion-icon name="bookmark-outline"></ion-icon>
                  </div>
      
                  <div class="rating">
                    <ion-icon name="star-outline"></ion-icon>
                    <span>6.4</span>
                  </div>
      
                  <div class="play">
                    <ion-icon name="play-circle-outline"></ion-icon>
                  </div>
      
                </div>
              </div>
      
              <div class="card-body">
                <h3 class="card-title"><%= similar[i].name %></h3>
      
                <div class="card-info">
                  <span class="genre">Action/Comedy</span>
                  <span class="year"><%= similar[i].year %></span>
                </div>
              </div>
      
            </div>
        </a>  
      
             <% } %>
